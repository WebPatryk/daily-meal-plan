  return Astro.redirect("/auth/login");
}
---

<Layout title="Profil - Daily Meal Plan">
  <main class="container mx-auto px-4 py-8">
    <div class="max-w-2xl mx-auto">
      <h1 class="text-3xl font-bold mb-6">Profil u≈ºytkownika</h1>

      <ProfilePage client:load user={user} />
